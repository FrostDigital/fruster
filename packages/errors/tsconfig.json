{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "es2016"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["./*.ts", "./lib/**/*.ts"],
  "exclude": ["node_modules", "spec", "dist"]
}
