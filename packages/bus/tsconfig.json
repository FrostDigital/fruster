{
	"compilerOptions": {
		"target": "es5",
		"lib": ["esnext", "es2016"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"]
}
