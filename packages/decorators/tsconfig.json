{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"lib": [
			"es6",
			"dom",
			"es2016",
			"es2017"
		],
		"allowJs": false,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"esModuleInterop": true
	},
	"include": [
		"index.ts",
		"index.d.ts"
	],
	"exclude": [
		"./node_modules/*"
	]
}
